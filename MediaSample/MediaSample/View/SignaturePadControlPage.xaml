<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:forms="clr-namespace:SignaturePad.Forms;assembly=SignaturePad.Forms"
             x:Class="MediaSample.View.SignaturePadControlPage">

    <StackLayout>
    <forms:SignaturePadView 
        x:Name="padView"
        BackgroundColor="White" 
        WidthRequest="250" 
        HeightRequest="350" 
        StrokeColor="Black" 
        StrokeWidth="3"
        PropertyChanged="PadView_PropertyChanged"
        Cleared="PadView_Cleared" />

        <!--Button Text="Salva" x:Name="btnSaveImage" Clicked="Save_Clicked"/-->
        <Button Text="Salva vettoriale" x:Name="btnSave" Clicked="SaveVectorClicked" />
        <Button Text="Carica vettoriale" x:Name="btnLoad" Clicked="LoadVectorClicked" />
        
    </StackLayout>
</ContentPage>